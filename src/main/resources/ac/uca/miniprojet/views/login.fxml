<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>

<AnchorPane stylesheets="@../css/login-styles.css" styleClass="bg-primary" fx:controller="ac.uca.miniprojet.controller.LoginController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">

   <VBox alignment="CENTER" prefHeight="406.0" prefWidth="300.0"
         AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
      <Label styleClass="title-label" text="Doctor Cabinet" />
   </VBox>

   <VBox spacing="20.0" alignment="CENTER" prefWidth="100.0"
         AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="350.0"
         AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="20.0">
      <Label text="Username Or Email:" styleClass="input-label"/>
      <TextField fx:id="usernameField" promptText="Enter your username or email" styleClass="input-field"/>
      <Label text="Password:" styleClass="input-label"/>
      <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="input-field"/>
      <Button fx:id="loginButton"
              text="Login"
              onAction="#handleLogin"
              styleClass="login-button"/>
      <Label fx:id="errorDisplayer" styleClass="errorLabel"/>
   </VBox>

</AnchorPane>